{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc",
      "type": "shell",
      "command": "yarn tsc --watch --noEmit -p ./app",
      "options": {
        "shell": {
          "executable": "nix-shell",
          "args": ["--run"]
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "owner": "typescript",
        "applyTo": "allDocuments"
      },
      "presentation": {
        "group": "dev"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "dev-server",
      "type": "shell",
      "command": "yarn dev",
      "options": {
        "shell": {
          "executable": "nix-shell",
          "args": ["--run"]
        }
      },
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "dev-gql",
      "type": "shell",
      "command": "yarn graphql:codegen:dev",
      "options": {
        "shell": {
          "executable": "nix-shell",
          "args": ["--run"]
        }
      },
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "dev-db",
      "type": "shell",
      "command": "docker-compose up",
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "dev",
      "dependsOn": ["dev-server", "dev-db", "tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
